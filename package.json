{
  "name": "next-generation-scrum-poker",
  "version": "1.0.0",
  "description": "prototype for a new scrum poker",
  "scripts": {
    "start": "run-p start:local-backend start:frontend",
    "preview": "run-p start:local-backend preview:frontend",
    "test": "cd frontend && jest",
    "build": "run-p build:backend build:frontend",
    "lint": "eslint --cache --fix --ext .js,.ts,.tsx .",
    "prepare": "husky install",
    "start:frontend": "cd frontend && vite",
    "start:local-backend": "run-p start:local-backend:db start:local-backend:gateway",
    "start:local-backend:db": "docker run --rm -p 8000:8000 amazon/dynamodb-local",
    "start:local-backend:gateway": "nodemon backend/local/main.ts",
    "preview:frontend": "npm run build:frontend && cd frontend && vite preview",
    "build:backend": "run-p build:backend:onconnect build:backend:ondisconnect build:backend:sendmessage",
    "build:backend:onconnect": "cd backend/onconnect && rimraf build && tsc -p .",
    "build:backend:ondisconnect": "cd backend/ondisconnect && rimraf build && tsc -p .",
    "build:backend:sendmessage": "cd backend/sendmessage && rimraf build && tsc -p .",
    "build:frontend": "run-p build:frontend:vite build:frontend:typecheck",
    "build:frontend:vite": "cd frontend && rimraf dist && rimraf dist-ssr && vite build && vite build --ssr src/index-ssr.tsx --outDir dist-ssr && node prerenderHtml.js",
    "build:frontend:typecheck": "tsc -p frontend --noEmit"
  },
  "repository": "github:tng/next-generation-scrum-poker",
  "author": "TNG",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/tng/next-generation-scrum-poker/issues"
  },
  "homepage": "https://github.com/tng/next-generation-scrum-poker#readme",
  "dependencies": {
    "@preact/preset-vite": "^2.2.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/preact": "^2.0.1",
    "@types/aws-lambda": "^8.10.93",
    "@types/classnames": "^2.3.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^16.11.26",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "aws-sdk": "^2.1103.0",
    "classnames": "^2.3.1",
    "eslint": "^8.12.0",
    "eslint-plugin-prettier": "^4.0.0",
    "html-minifier-terser": "^7.0.0-alpha.2",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "preact": "^10.7.0",
    "preact-render-to-string": "^5.1.20",
    "prettier": "^2.6.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "vite": "^2.8.6",
    "ws": "^8.5.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}
